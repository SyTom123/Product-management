mixin sub-menu(items, path, level = 1)
    ul(class=`sub-menu-list sub-menu-list-${level}`) 
        each item in items 
            li(class=`sub-menu-list-item-${level}`)
                a(href=`${path}/${item.slug}`) 
                    span #{item.title}
                    if(item.children && item.children.length > 0) 
                        i(
                            class="fa-solid fa-angle-right"
                            style="position: relative; top:1px; margin-left: 1px"
                        )
                if(item.children && item.children.length > 0)
                    +sub-menu(item.children, path, level+1)