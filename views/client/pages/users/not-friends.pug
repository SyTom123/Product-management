extends ../../layouts/default.pug
include ../../mixins/box-head.pug 
block main 
    .container
        .row 
            .col-12 
                +box-head("Danh sách người dùng")
        include ../../partials/list-btn-users.pug
        .row.mt-4 
            each user in users
                .col-4 
                    div(class="box-user")
                        div(class="inner-avatar")
                            img(
                                src= user.avatar ? user.avatar : "/images/avatar-none.jpg",
                                alt= user.fullName
                            )
                        div(class="inner-info")
                            div(class="inner-name") 
                                a(href=`/users/${user.id}`) #{user.fullName}
                            div(class="inner-buttons")
                                button(
                                    class="btn btn-sm btn-primary mr-1"
                                    btn-add-friend = user.id
                                ) Kết bạn
                                button(
                                    class="btn btn-sm btn-danger mr-1"
                                    btn-cancel-friend = user.id
                                ) Hủy
    block script 
        script(type="module" src="/js/users.js")  
