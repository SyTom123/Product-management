extends ../../layouts/default.pug
include ../../mixins/box-head.pug 
block main 
    .container
        .row 
            .col-12 
                +box-head("Lời mời đã nhận")
        include ../../partials/list-btn-users.pug

        .row.mt-4 
            each user in users
                .col-4 
                    div(class="box-user add")
                        div(class="inner-avatar")
                            img(
                                src= user.avatar ? user.avatar : "/images/avatar-none.jpg",
                                alt= user.fullName
                            )
                        div(class="inner-info")
                            div(class="inner-name") 
                                a(href=`/users/${user.id}`) #{user.fullName}
                            div(class="inner-buttons")
                                button(
                                    class="btn btn-sm btn-primary mr-1"
                                    btn-accept-friend = user.id
                                ) Chấp nhận
                                button(
                                    class="btn btn-sm btn-danger mr-1"
                                    btn-refuse-friend = user.id
                                ) Xóa
                                button(
                                    class="btn btn-sm btn-secondary mr-1"
                                    btn-deleted-friend
                                    disabled
                                ) Đã xóa
    block script 
        script(type="module" src="/js/users.js")  
