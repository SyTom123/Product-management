extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
    .container
        .row
            .col-12
                +box-head("Danh sách bạn bè")

        include ../../partials/list-btn-users.pug

        .row(data-users-friend class ="mt-4")
            each user in users
                .col-4(user-id = user.id)
                    div(class="box-user")
                        div(class="inner-avatar")
                            img(
                                src=(user.avatar ? user.avatar : "/images/avatar-none.jpg")
                                alt=user.fullName
                            )
                        div(class="inner-info")
                            div(class= "inner-name")
                                a(href=`/users/${user.id}`) #{user.fullName}
                            div(class="inner-buttons")
                                a(
                                    href=`/chat/${user.roomChatId}`
                                    class="btn btn-sm btn-primary mr-1"
                                ) Nhắn tin
                        div(
                            class="inner-status"
                            status=user.statusOnline
                        ) <i class="fa-solid fa-circle"></i>


block script
    script( src="/js/users.js")