extends ../../layouts/default
include ../../mixins/box-head.pug
include ../../mixins/alert.pug
block main 
    +alert-success(3000)
    +alert-error(3000)
    .container
        .checkout
            .row 
                .col-12 
                    +box-head("Đặt hàng")
            .row 
                .col-7
                    table(class="table table-bordered text-center")
                        thead
                            th STT
                            th Ảnh
                            th Tên
                            th Giá
                            th Số lượng
                            th Tổng tiền
                        tbody 
                            if(cartDetail.products.length > 0)
                                each item, index in cartDetail.products
                                    tr
                                        td #{index + 1}
                                        td
                                            img(
                                                src=item.productInfo.thumbnail
                                                alt=item.productInfo.title
                                                width="80px"
                                            )
                                        td #{item.productInfo.title}
                                        td #{item.productInfo.priceNew}$
                                        td #{item.quantity}
                                        td #{item.totalPrice}$
                .col-5
                    h5(class="sum-cart") Cộng giỏ hàng
                    div(class="sum-cart-box")
                        p(class="sum-cart-text") Tạm tính: 
                        div(class="sum-cart-number")
                            <b>#{cartDetail.totalPrice}</b> $
                    div(class="sum-cart-box")
                        p(class="sum-cart-text") Tổng: 
                        div(class="sum-cart-number")
                            <b>#{cartDetail.totalPrice}</b> $
            if(cartDetail.products.length > 0)
                .row 
                    .col-12
                        .cart
                            form(
                                action="/checkout/order"
                                method = "POST"
                                form-address-checkout
                            ) 
                                h4(class="mb-3 ") Thông tin khách hàng
                                .row 
                                    .col-md-6 
                                        div(class="form-group")
                                            input(
                                                type="text"
                                                placholder="Họ và tên"
                                                class="form-control"
                                                id="fullName"
                                                name="fullName"
                                                required
                                                value = user.fullName
                                            )
                                    .col-md-6 
                                        div(class="form-group")
                                            input(
                                                type="text"
                                                class="form-control"
                                                placholder="Số điện thoại"
                                                id="phone"
                                                name="phone"
                                                value = user.phone
                                                required
                                            )
                                    .col-md-6
                                        <select class=" form-control mb-3" id="city" >
                                            <option value="" name="city" selected>Chọn tỉnh thành</option>
                                        </select>
                                    .col-md-6
                                        <select class="form-control mb-3" id="district" >
                                            <option value="" name="district" selected>Chọn quận huyện</option>
                                        </select>
                                    .col-md-6
                                        <select class="form-control mb-3" id="ward" >
                                            <option value="" name="ward" selected>Chọn phường xã</option>
                                        </select>
                                    .col-md-6
                                        input(
                                            type="text"
                                            class="form-control"
                                            id="detailAddress"
                                            name="detailAddress"
                                            placeholder="Số nhà, ngõ, đường"
                                        )
                                    .col-md-12
                                        input(
                                            type="text"
                                            class="form-control"
                                            id="address"
                                            name="address"
                                            class="d-none"
                                        )
                                div(class="form-group mt-2")
                                button(
                                    type="submit"
                                    class="btn btn-success btn-block"
                                ) ĐẶT HÀNG