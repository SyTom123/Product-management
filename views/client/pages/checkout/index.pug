extends ../../layouts/default
include ../../mixins/box-head.pug
include ../../mixins/alert.pug
block main 
    +alert-success(3000)
    +alert-error(3000)
    .container
        .checkout
            .row 
                .col-12 
                    +box-head("Đặt hàng")
            .row 
                .col-12 
                    table(class="table table-bordered text-center")
                        thead
                            th STT
                            th Ảnh
                            th Tên
                            th Giá
                            th Số lượng
                            th Tổng tiền
                        tbody 
                            if(cartDetail.products.length > 0)
                                each item, index in cartDetail.products
                                    tr
                                        td #{index + 1}
                                        td
                                            img(
                                                src=item.productInfo.thumbnail
                                                alt=item.productInfo.title
                                                width="80px"
                                            )
                                        td #{item.productInfo.title}
                                        td #{item.productInfo.priceNew}$
                                        td #{item.quantity}
                                        td #{item.totalPrice}$
            if(cartDetail.products.length > 0)
                .row 
                    .col-12
                        .cart
                            form(
                                action="/checkout/order"
                                method = "POST"
                            ) 
                                div(class="form-group")
                                    label(for="fullName") Họ tên
                                    input(
                                        type="text"
                                        class="form-control"
                                        id="fullName"
                                        name="fullName"
                                        required
                                        value = user.fullName
                                    )
                                div(class="form-group")
                                    label(for="phone") Số điện thoại
                                    input(
                                        type="text"
                                        class="form-control"
                                        id="phone"
                                        name="phone"
                                        value = user.phone
                                        required
                                    )
                                div(class="form-group")
                                    label(for="address") Địa chỉ
                                    input(
                                    type="text"
                                    class="form-control"
                                    id="address"
                                    name="address"
                                    value = user.address
                                    required
                                    )
                                div(class="form-group")
                                button(
                                    type="submit"
                                    class="btn btn-success btn-block"
                                ) ĐẶT HÀNG