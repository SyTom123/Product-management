extends ../../layouts/default.pug  
include ../../mixins/alert.pug
include ../../mixins/box-head.pug
block main 
    +alert-error(3000)
    .container
        +box-head("Chỉnh sửa tài khoản")
        .row.justify-content-center 
            .col-7 
                form(
                    action=`/user/edit/${user.id}?_method=PATCH` 
                    method="POST"
                    form-register
                    enctype="multipart/form-data"
                    class="edit-user"
                )
                    div(class="form-group")
                        label(for="fullName") Họ và tên     
                        input(
                            type="text"
                            class="form-control"
                            id="fullName"
                            name="fullName"
                            value = user.fullName
                        )
                    div(
                        class="form-group"
                        upload-image
                    )
                        label(for='avatar') Avatar 
                        input(
                            type="file"
                            class="form-control-file"
                            id="avatar"
                            name="avatar"
                            accept="image/*"
                            upload-image-input
                        )
                        div(class="text-center mt-3")
                            img(
                                src = user.avatar ? user.avatar:"/images/avatar-none.jpg"
                                class="image-preview"
                                upload-image-preview
                                width="200px" height="200px"
                                style="object-fit: cover; border-radius: 50%; border: 1px solid #dbdbdb"
                            )
                    div(class="form-group")
                        label(for="email") Email    
                        input(
                            type="email"
                            class="form-control"
                            id="email"
                            name="email"
                            value = user.email
                        )
                    div(class="form-group")
                        label(for="phone") Phone    
                        input(
                            type="text"
                            class="form-control"
                            id="phone"
                            name="phone"
                            value = user.phone
                        )
                    div(class="form-group")
                        label(for="password") Password    
                        input(
                            type="password"
                            class="form-control"
                            id="password"
                            name="password"
                        )
                    
                    div(class="form-check")
                        input(
                            class="form-check-input " 
                            type="checkbox" value="" 
                            id="checkbox"
                            style="cursor: pointer"
                        )
                        label(
                            class="form-check-label" 
                            for="checkbox"
                            style="cursor: pointer"
                        ) Hiển thị mật khẩu

                    div(class="form-group mt-3")
                        button(
                        type="submit"
                        class="btn btn-primary btn-block"
                    ) Cập nhật

                                
                           
