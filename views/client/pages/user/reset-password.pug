extends ../../layouts/default.pug
include ../../mixins/alert.pug
block main 
    +alert-error(3000)
    .container.my-5 
        .row.justify-content-center 
            .col-6
                h2(class="text-center") Đổi mật khẩu 
                form(
                    action="/user/password/reset"
                    method="POST"
                    form-register
                ) 
                    div(class="form-group")
                        label(for="password") Mật khẩu mới 
                        input(
                            type="password"
                            class="form-control"
                            id="password"
                            name="password"
                        )
                    div(class="form-group")
                        label(for="confirmPassword") Xác nhận Mật khẩu mới 
                        input(
                            type="password"
                            class="form-control"
                            id="confirmPassword"
                            name="confirmPassword"
                        )
                    div(class="form-check")
                        input(
                            class="form-check-input " 
                            type="checkbox" value="" 
                            id="checkbox"
                            style="cursor: pointer"
                        )
                        label(
                            class="form-check-label" 
                            for="checkbox"
                            style="cursor: pointer"
                        ) Hiển thị mật khẩu

                    div(class="form-group mt-4")
                        button(
                        type="submit"
                        class="btn btn-primary btn-block"
                        ) Đổi mật khẩu
                    
