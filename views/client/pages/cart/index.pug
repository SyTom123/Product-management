extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/box-head.pug
include ../../mixins/go-back.pug

block main  
    +alert-success(3000)
    +alert-error(3000)
    .container.my-3     
        .row 
            .col-md-6
                +box-head("Giỏ hàng") 
            .col-md-6.text-right 
                +goBack()
        .row 
            .col-md-12 
                table(class="table table-bordered text-center")
                    thead(style="background:lightgreen")
                        tr 
                            th STT
                            th Ảnh
                            th Tên
                            th Giá
                            th Số lượng
                            th Tổng tiền
                            th Hành động
                    tbody 
                        if(cartDetail.products.length > 0)
                            each item, index in cartDetail.products 
                                tr 
                                    td #{index + 1}
                                    td
                                        img(src=item.productInfo.thumbnail, 
                                            alt=item.productInfo.title width ="80px")
                                    td 
                                        a(href=`products/detail/${item.productInfo.slug}`) 
                                            span #{item.productInfo.title}
                                    td 
                                        span #{item.productInfo.priceNew} $
                                    td 
                                        input(
                                            type="number"
                                            name="quantity"
                                            value=item.quantity 
                                            min="1"
                                            product-id = item.product_id
                                            style="width: 55px; border: 1px solid #ddd; outline: none; text-align:center"
                                        )
                                    td #{item.totalPrice}
                                    td
                                        a(
                                            href=`/cart/delete/${item.product_id}`
                                            class="btn btn-danger btn-sm"
                                        ) Xóa
                        else 
                            p Không có sản phẩm nào trong giỏ hàng
                h3(class="text-right") Tổng đơn hàng: #{cartDetail.totalPrice}$
                div(class="text-right mt-3") 
                    a(href="/checkout" class="btn btn-success") Thanh toán 


