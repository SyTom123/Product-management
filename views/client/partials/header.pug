include ../mixins/sub-menu.pug

header.header 
    .container 
        .row.d-flex.align-items-center
            .col-3
                .inner-logo
                    a(href="/")
                        img(src="/images/logo.svg", alt="Logo")
            .col-9
                .inner-menu
                    ul 
                        li  
                            a(href="/") Trang chủ

                        li(class="sub-menu")
                            - const pathProduct ="/products";
                            a(href=pathProduct) 
                                <span> Sản phẩm </span>
                                <i class="fa-solid fa-angle-down" style="position:relative; top:2px"></i>


                            if(layoutCategoryProducts)  
                                +sub-menu(layoutCategoryProducts, pathProduct)