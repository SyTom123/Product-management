extends ../../layouts/default.pug

block main 
    .row 
        .col-xl-6.m-auto
            .card 
                .card-header
                    h2(class="mb-4 text-center") Tài khoản của tôi 

                .card-body
                    div(class="text-center")
                        if(user.avatar) 
                            img(src=user.avatar, width="150px", height="150px",style="border-radius: 50%; object-fit: cover" ,class="mb-3", alt="avatar")
                        else 
                            img(src="/admin/images/avatar.jpg", width="150px"  height="150px", class="mb-3", alt="avatar")

                    if(user.fullName) 
                        p Họ tên: <b> #{user.fullName}</b>

                    if(user.email) 
                        p Email: <b>#{user.email} </b>
                    
                    if(user.phone) 
                        p Phone: <b>#{user.phone} </b>
                    
                    p
                        span Trạng thái:
                            if(user.status == "active")
                                span(class="badge badge-success p-2 ml-3") Hoạt động 
                            else 
                                span(class="badge badge-danger p-2 ml-3") Dừng Hoạt động 

                    if(role.title)
                        p Phân quyền: <b>#{role.title} </b>

                a(
                    href=`/${prefixAdmin}/my-account/edit`
                    class="btn btn-primary d-inline-block"
                    style="max-width: 100px; margin: 0 auto 10px"
                ) Chỉnh sửa 
