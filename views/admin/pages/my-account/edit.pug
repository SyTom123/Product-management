extend ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
    h2(class = "mb-4") Cập nhật thông tin của tôi 
    +alert-success(3000)

    form(
        action=`/${prefixAdmin}/my-account/edit?_method=PATCH`
        method="POST" 
        enctype="multipart/form-data"
    )
        div(class="form-group")
            label(for="fullName") Họ tên *
            input(
                type="text"
                class="form-control"
                id="fullName"
                name="fullName"
                required
                value = user.fullName
            )
        div(class="form-group")
            label(for="email") Email *
            input(
                type="text"
                class="form-control"
                id="email"
                name="email"
                value = user.email
            )
        div(class="form-group")
            label(for="password") Password 
            input(
                type="text"
                class="form-control"
                id="password"
                name="password"
                value = ""
            )
        div(class="form-group")
            label(for="phone") Số điện thoại 
            input(
                type="text"
                class="form-control"
                id="phone"
                name="phone"
                value = user.phone
            )
        div(
            class="form-group"
            upload-image
            )
            label(for='avatar') Avatar 
            input(
                type="file"
                class="form-control-file"
                id="avatar"
                name="avatar"
                accept="image/*"
                upload-image-input
            )
            img(
                src=user.avatar? user.avatar : "/admin/images/avatar.jpg" , alt="avatar"
                class="image-preview"
                upload-image-preview
            )
        div(class="form-group mt-3")
            button(
                type="submit"
                class="btn btn-primary"
            ) Cập nhật

