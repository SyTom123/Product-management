extends ../../layouts/default.pug
include ../../mixins/table-tree.pug
include ../../mixins/alert.pug

block main  
    +alert-success(3000)
    if(role.permissions.includes("products-category_view"))
        h2(class="mb-4") Danh mục sản phẩm
        .card.mb-3 
            .card-header Danh sách
            .card-body 
                .row 
                    .col-8
                    .col-4.text-right 
                        if(role.permissions.includes("products-category_create"))
                            a(
                                href=`/${prefixAdmin}/product-category/create`
                                class="btn btn-outline-success"
                            ) <i class="fa-solid fa-plus"></i> Thêm mới
                table(
                    class="table table-hover table-sm mt-3"
                )
                    thead 
                        tr 
                            th STT
                            th Hình ảnh
                            th Tiêu đề
                            th Vị trí 
                            th Trạng thái
                            th Hành động
                    tbody 
                        +table-tree(records)
        form(
            id="form-change-status"
            method="POST"
            action=""
            data-path=`/${prefixAdmin}/product-category/change-status`
        )
        form(
            id="form-delete-item"
            method="POST"
            action=""
            data-path=`/${prefixAdmin}/product-category/delete`
        )
                        
