extends ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/change-multi.pug
include ../../mixins/alert.pug
block main 
    +alert-success(4000)
    h1(class="mb-3") Danh sách sản phẩm
    .card.mb-3 
        .card-header Bộ lọc và tìm kiếm 
        .card-body  
            .row
                .col-6
                    +filter-status(filterStatus)
                .col-6  
                    +search(keyword)
    .card.mb-3
        .card-header Hành động
        .card-body 
            .row
                .col-8 
                    +change-multi(`/${prefixAdmin}/products/change-multi?_method=PATCH`)
                .col-4 
                    a(href=`/${prefixAdmin}/products/create` class="btn btn-outline-success")
                        <i class="fa-solid fa-plus"></i>
                        span(class ="ml-1") Thêm mới 
    .card.mb-3 

        .card-header Danh sách sản phẩm
        .card-body
            table(
                class="table table-hover table-sm"
                checkbox-multi
            )
                thead 
                    tr 
                        th 
                            input(
                                type="checkbox" 
                                name= "checkall"
                                style ="cursor: pointer"
                            )
                        th STT 
                        th Hình ảnh 
                        th Tiêu đề
                        th Giá
                        th Vị trí
                        th Trạng thái 
                        th Hành động 
                tbody 
                    if(products.length > 0)
                        each item, index in products 
                            tr 
                                td  
                                    input(
                                        style ="cursor: pointer"
                                        width = "50px"
                                        type= "checkbox"
                                        name="id"
                                        value= item.id
                                    )
                                td #{index+ 1}
                                td 
                                    img(src=item.thumbnail, alt=item.title width="100px" height="auto")
                                td #{item.title}
                                td #{item.price} $
                                td  
                                    input(
                                        type="number"
                                        value=item.position
                                        style="width:56px; outline:none;border:1px solid #ddd; border-radius:5px; text-align: center;"
                                        min="1"
                                        name="position"
                                    )
                                td 
                                    if(item.status == 'active')
                                        button(
                                            class="badge badge-success"
                                            style="border:none;padding: 10px;font-size: 13px"
                                            button-change-status
                                            data-status= item.status 
                                            data-id= item.id
                                        ) Hoạt động
                                    else 
                                        button(
                                            class="badge badge-danger"
                                            style="border:none;padding: 10px;font-size: 13px"
                                            button-change-status 
                                            data-status= item.status 
                                            data-id= item.id
                                        ) Dừng hoạt động
                                td
                                    a(
                                        href=`/${prefixAdmin}/products/detail/${item.id}`
                                        class="btn btn-secondary btn-sm text-white") Xem chi tiết
                                    a(
                                        href=`/${prefixAdmin}/products/edit/${item.id}`
                                        class="btn btn-warning btn-sm mx-1 text-white") Sửa
                                    button(
                                        class="btn btn-danger btn-sm text-white"
                                        button-delete
                                        data-id=item.id
                                    ) Xóa
                    else
                        tr 
                            td(
                                colspan='7'
                                class="text-center"
                            ) Không tìm thấy sản phẩm 
    form(
        id="form-change-status"
        method="POST"
        action=""
        data-path=`/${prefixAdmin}/products/change-status`
    )
    form(
        id="form-delete-item"
        method="POST"
        action=""
        data-path=`/${prefixAdmin}/products/delete`
    )
    +pagination(pagination)
    