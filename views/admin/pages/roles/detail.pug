extends ../../layouts/default.pug
include ../../mixins/alert.pug
block main 
    +alert-error(3000)
    h2(class="mb-4") Chi tiết nhóm quyền
    form()
        div(class="form-group")
            label(for="title") Tiêu đề
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                value= role.title
                readonly
            )
        div(class="form-group")
            label(for="desc") Mô tả
            textarea(
                class="form-control textarea-mce"
                id="desc"
                name="description"
                rows="5"
            ) #{role.description}


