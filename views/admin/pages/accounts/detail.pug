extends ../../layouts/default.pug
include ../../mixins/alert.pug
block main 
    +alert-success(3000)
    h2(class="mb-4") Chi tiết tài khoản

    div(class="account-detail")
        .row 
            .col-md-5.mx-auto 
                .card 
                    .card-header 
                        div(class="text-center font-weight-bold") #{record.fullName}
                    .card-body 
                        div(class="text-center")
                            img(
                                src= record.avatar ? record.avatar : "/admin/images/avatar.jpg"
                                width="100px" height="100px"
                                style ="border-radius: 50%; object-fit: cover"
                            )
                        div(class="mt-3")
                            p Email: #{record.email}
                            p Phone: #{record.phone}
                            p Phân quyền :  #{record.role.title}
                            p Tình trạng : 
                                if(record.status == "active")
                                    span(
                                        class="badge badge-success d-inline-block p-2"
                                    ) Hoạt động 
                                else 
                                    span(
                                        class="badge badge-danger d-inline-block p-2"
                                    ) Dừng Hoạt động 